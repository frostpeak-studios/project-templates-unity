*.env        text diff=dotenv
*.ini        text diff=ini
*.cfg        text diff=ini
*.conf       text diff=ini
*.config     text diff=ini
*.props      text diff=properties
*.properties text diff=properties
# Unity assembly def/ref files are in JSON format.
*.asmdef     text diff=json
*.asmref     text diff=json

