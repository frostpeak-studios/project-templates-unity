############################
########### EOL ############
############################
*     eol=lf   text=auto
# Windows files are CRLF
*.bat eol=crlf
*.cmd eol=crlf
*.ps1 eol=crlf

############################
########## MACROS ##########
############################
# Unity YAML files are treated specially.
[attr]unityyaml diff=text merge=unityyamlmerge
# LFS (Large File Storage) tracked files.
[attr]lfs filter=lfs diff=lfs merge=lfs -text

